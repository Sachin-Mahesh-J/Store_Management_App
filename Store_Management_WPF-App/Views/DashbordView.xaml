<UserControl x:Class="Store_Management_WPF_App.Views.DashbordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Store_Management_WPF_App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600" Loaded="UserControl_Loaded">

    <Grid Background="#f4f4f4" Margin="10">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>
            <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0">
                <Border Background="#2196F3" CornerRadius="10" Padding="20" Margin="10">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Employees" FontSize="16" Foreground="White"/>
                        <TextBlock x:Name="txtEmployeeCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border Background="#4CAF50" CornerRadius="10" Padding="20" Margin="10">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Orders" FontSize="16" Foreground="White"/>
                        <TextBlock x:Name="txtOrderCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border Background="#FF9800" CornerRadius="10" Padding="20" Margin="10">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Suppliers" FontSize="16" Foreground="White"/>
                        <TextBlock x:Name="txtSupplierCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
                <Border Background="#9C27B0" CornerRadius="10" Padding="20" Margin="10">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Products" FontSize="16" Foreground="White"/>
                        <TextBlock x:Name="txtProductCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </Grid>
</UserControl>

